# Development Environment Variables
# Copy this file to .env.local for local development

# Database Configuration
# For local development, use SQLite or a local PostgreSQL instance
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/anjelaweb_dev?schema=public"
# Or for SQLite (simpler for development):
# DATABASE_URL="file:./dev.db"

# NextAuth Configuration
NEXTAUTH_SECRET="development-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Redis Configuration
# For development, you can use Upstash free tier or local Redis
UPSTASH_REDIS_REST_URL="http://localhost:6379"
UPSTASH_REDIS_REST_TOKEN=""
# Or Upstash cloud (free tier available):
# UPSTASH_REDIS_REST_URL="https://your-url.upstash.io"
# UPSTASH_REDIS_REST_TOKEN="your-token"

# Email Configuration (Optional - for testing contact forms)
# You can use Mailtrap.io for development
SMTP_HOST="sandbox.smtp.mailtrap.io"
SMTP_PORT="2525"
SMTP_USER="your-mailtrap-user"
SMTP_PASSWORD="your-mailtrap-password"
SMTP_FROM="noreply@localhost"

# Cloudflare R2 / S3 Configuration (Optional - for image uploads)
# For development, you can leave these empty and use local file storage
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME=""
R2_PUBLIC_BASE_URL=""

# Cloudflare Turnstile (Optional - for anti-spam)
# For development, you can use Turnstile's test keys
NEXT_PUBLIC_TURNSTILE_SITE_KEY="1x00000000000000000000AA"
TURNSTILE_SECRET_KEY="1x0000000000000000000000000000000AA"

# Application Settings
NODE_ENV="development"
