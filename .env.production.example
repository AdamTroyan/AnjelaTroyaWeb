# Database Configuration
DATABASE_URL="postgresql://anjelauser:YOUR_DB_PASSWORD@localhost:5432/anjelaweb?schema=public"

# NextAuth Configuration
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="https://yourdomain.com"

# Redis Configuration (Local Redis on Hetzner)
UPSTASH_REDIS_REST_URL="http://localhost:6379"
UPSTASH_REDIS_REST_TOKEN=""

# Email Configuration (Optional - for contact forms)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="noreply@yourdomain.com"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="noreply@yourdomain.com"

# Cloudflare R2 / S3 Configuration (Optional - for image uploads)
R2_ACCOUNT_ID="your-account-id"
R2_ACCESS_KEY_ID="your-access-key"
R2_SECRET_ACCESS_KEY="your-secret-key"
R2_BUCKET_NAME="anjelaweb-uploads"
R2_PUBLIC_BASE_URL="https://your-r2-domain.com"

# Cloudflare Turnstile (Optional - for anti-spam)
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your-site-key"
TURNSTILE_SECRET_KEY="your-secret-key"

# Application Settings
NODE_ENV="production"
PORT=3000
